{
  "name": "distolma.github.io",
  "version": "0.2.0",
  "private": false,
  "repository": "git@github.com:distolma/distolma.github.io.git",
  "author": "distolma <djmakaron2009@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "parcel src/index.pug --open",
    "build": "npm run clear && parcel build src/index.pug --experimental-scope-hoisting --public-url ./",
    "clear": "rimraf dist"
  },
  "devDependencies": {
    "@types/node": "^11.11.6",
    "autoprefixer": "^9.5.0",
    "eslint": "^5.15.3",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "parcel-bundler": "^1.12.3",
    "parcel-plugin-svg-sprite": "^1.1.1",
    "prettier": "^1.16.4",
    "pug": "^2.0.3",
    "rimraf": "^2.6.3",
    "sass": "^1.17.3",
    "stylelint": "^9.10.1",
    "stylelint-config-recommended-scss": "^3.2.0",
    "stylelint-scss": "^3.5.4",
    "svgo": "^1.2.0",
    "typescript": "^3.3.4000"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*._ts": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.scss": [
      "stylelint --fix",
      "git add"
    ],
    "*.svg": [
      "svgo",
      "git add"
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "eslintConfig": {
    "rules": {}
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "stylelint": {
    "plugins": [
      "stylelint-scss"
    ],
    "extends": "stylelint-config-recommended-scss"
  }
}
