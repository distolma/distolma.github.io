---
import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"a">;

const { ...attrs } = Astro.props;
---

<a
  {...attrs}
  class="group relative inline-block h-9 w-9 cursor-pointer p-2 outline-none"
>
  <div
    class="absolute top-0 left-0 h-full w-full scale-0 rounded-full bg-slate-200 transition-transform duration-200 ease-in-out group-hover:scale-100 group-focus-visible:scale-100 dark:bg-slate-600"
  >
  </div>
  <div class="relative"><slot /></div>
</a>
